        };
        next_app: next_app {
            label = "ZM_next_app";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp RGUI>
                , <&macro_tap &kp TAB>
                , <&macro_pause_for_layer>
