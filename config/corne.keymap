            bindings = <
   &trans  &trans    &trans    &trans   &trans   &trans &trans &trans &trans &trans &trans &trans
   &kp ESC &sk LSHFT &sk LCTRL &sk LALT &sk LGUI &trans &trans &trans &trans &trans &trans &trans
   &trans  &trans    &trans    &trans   &trans   &trans &trans &trans &trans &trans &trans &trans
                        &trans &trans &trans &trans &trans &trans
            >;
        };

        sys_layer {
            label = "SYS";
