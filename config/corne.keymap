        pluseq: pluseq {
            label = "ZM_plus_equals";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp PLUS>
                , <&macro_tap &kp EQUAL>
                ;
        };

        // vim macros
        TOG_VIM_KEY(SPACE)
        TOG_VIM_KEY(COLON)
        TOG_VIM_KEY(FSLH)
        TOG_VIM_KEY(A)
        TOG_VIM_KEY(S)
